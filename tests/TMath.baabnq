use 'libs/tests/common.baabnq';
use 'libs/math.baabnq';

lab TestMath::Add;
    push 4;
    push 3;
    sub Math::Add;
    pull _v;
    jump fail ~ _v != 7;

    push 0;
    push 0;
    sub Math::Add;
    pull _v;
    jump fail ~ _v != 0;    

    push 1 << 15;
    push 1 << 15;
    sub Math::Add;
    pull _v;
    jump fail ~ _v != 0;    

    jump succ;

lab TestMath::Sub;
    push 4;
    push 3;
    sub Math::Sub;
    pull _v;
    jump fail ~ _v != 1;

    push 0;
    push 0;
    sub Math::Sub;
    pull _v;
    jump fail ~ _v != 0;

    push 1;
    push 2;
    sub Math::Sub;
    pull _v;
    jump fail ~ _v != (1 << 16) - 1;

    jump succ;


lab TestMath::Mul;
    push 4;
    push 3;
    sub Math::Mul;
    pull _v;
    jump fail ~ _v != 12;
    
    push 0;
    push 3;
    sub Math::Mul;
    pull _v;
    jump fail ~ _v != 0;

    push 4;
    push 0;
    sub Math::Mul;
    pull _v;
    jump fail ~ _v != 0;

    push (1 << 16) - 1;
    push (1 << 16) - 1;
    sub Math::Mul;
    pull _v;
    jump fail ~ _v != 1;
    
    jump succ;

lab TestMath::Div;
    push 12;
    push 3;
    sub Math::Div;
    pull _v;
    jump fail ~ _v != 4;

    push 0;
    push 3;
    sub Math::Div;
    pull _v;
    jump fail ~ _v != 0;

    push 4;
    push 0;
    sub Math::Div;
    pull _v;
    "basically infinity, but 16-bit
    jump fail ~ _v != 65535;

    push 0;
    push 0;
    sub Math::Div;
    pull _v;
    "basically infinity, but 16-bit
    jump fail ~ _v != 65535;

    jump succ;

lab TestMath::Mod;
    "largest primes less than 1 << 16 - 1
    push 65521;
    push 65407;
    sub Math::Mod;
    pull _v;
    jump fail ~ _v != 114;
    
    jump succ;
