lab TestFloats::ShiftSmall;
    sub fInit;

    "test zero-shift
    push 378;  "some random value, in this case (float16)1000
    push 0;
    sub Floats::ShiftSmall;
    pull _v;
    jump fail ~ _v != 378;

    "test n-shift for zero
    push 16384;
    push 10;
    sub Floats::ShiftSmall;
    sub Floats::Fp2Value;
    pull _v;
    jump fail ~ _v != 0; "isomorphic

    "64 >> 2 = 16
    push 64;
    sub Floats::Value2Fp;
    push 2;
    sub Floats::ShiftSmall;
    sub Floats::Fp2Value;
    pull _v;
    jump fail ~ _v != 16;

    jump succ;

