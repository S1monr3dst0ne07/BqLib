lab TestFloats::SetSign;
    sub fInit;

    push 0;
    sub Floats::SetSign;
    pull _v;
    jump fail ~ _v != (1 << 15);

    push ((1 << 15) - 1);
    sub Floats::SetSign;
    pull _v;
