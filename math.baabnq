lab Math::Min;
    pull _ReturnAddr; "nasty, but best solution in this case
    pull _1;
    pull _2;
    push _ReturnAddr; "save
    push _2;
    push _1;
    
    sub Stack::Swap ~ _1 < _2;
      
    pull __; "pull smaller value
    sub Stack::Swap;
    return;

lab Math::Max;
    pull _ReturnAddr; "nasty, but best solution in this case
    pull _1;
    pull _2;
    push _ReturnAddr; "save
    push _2;
    push _1;

    sub Stack::Swap ~ _1 > _2;
       
    pull __; "pull smaller value
    sub Stack::Swap;
    return;

"(Value::Int, Offset::Int) => (Value::Int)
"Value::Int =<< Offset::Int
lab Math::Shg;
    sub Stack::Swap;
    pull _2;
    sub Stack::Swap;
    pull _1;

    push _1 << _2;
    sub Stack::Swap;
    return;    

"(Value::Int, Offset::Int) => (Value::Int)
"Value::Int =>> Offset::Int
lab Math::Shs;
    sub Stack::Swap;
    pull _2;
    sub Stack::Swap;
    pull _1;

    push _1 >> _2;
    sub Stack::Swap;
    return;    
    


